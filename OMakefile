VERSION = 0.0.1

LIBS = lib/core/pg.cma lib/core/pg.cmxa lib/lwt/pg_lwt.cma lib/lwt/pg_lwt.cmxa

.PHONY: build install uninstall test
.DEFAULT: build

build: $(LIBS)

install: build
    ocamlfind install -patch-version $(VERSION) pg \
        lib/META \
        lib/core/pg.cma lib/core/pg.cmxa lib/core/pg.cmi \
        lib/lwt/pg_lwt.cma lib/lwt/pg_lwt.cmxa lib/lwt/pg_lwt.cmi

uninstall:
    ocamlfind remove pg

test: tests/test
    ./tests/test $(CONNINFO)

.SUBDIRS: lib tests
